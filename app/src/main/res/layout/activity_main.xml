<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="com.example.studente3.lab07_activites.MainActivity">

    <ScrollView
        android:id="@+id/sv_text"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:layout_centerHorizontal="true">
    <TextView

        android:id="@+id/tv_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="顏色未設定"

        android:textAppearance="@android:style/TextAppearance.Large"
        />
    </ScrollView>
    <Button
        android:id="@+id/btn_selectColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選擇顏色"
        android:layout_below="@+id/sv_text"
        android:layout_centerHorizontal="true"
        android:onClick="selectColor"/>
    <Button
        android:id="@+id/btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:layout_below="@+id/btn_selectColor"
        android:layout_centerHorizontal="true"
        android:onClick="textClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="輸入文字"
        android:layout_below="@+id/btn_text"
        android:layout_centerHorizontal="true"
        android:onClick="putText"/>
</RelativeLayout>
